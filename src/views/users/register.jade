.container-fluid(tooltips)
  ol.breadcrumb
    li
      a(ui-sref="root.home") Home
    li.active Registrierung
  .col-md-6.col-md-offset-3
    .panel.panel-default
      .panel-heading
        h3#registrations_title.panel-title Registrierung
      .panel-body
        label.control-label.h3 Accountdaten
        form(name="registrationForm", novalidate)
          .form-group(ng-class="{ 'has-error' : reg.errors.username }")
            label.control-label Accountname *
              input#registrations_input_username.form-control(name="username", ng-minlength="4",
                ng-model="reg.form.user.username", data-toggle="tooltip" title="Mit ihrem Accountnamen können Sie sich später einloggen.", data-placement="left")
          .form-group(ng-class="{'has-error' : reg.errors.password || reg.errors.password_confirmation }")
            label.control-label Passwort *
              input#registrations_input_password.form-control(name="password", type="password", ng-minlength="8",
                ng-model="reg.form.user.password" data-toggle="tooltip" title="Ihr Password sollte zwischen 8 und 30 Zeichen lang sein.", data-placement="left")
            label.control-label Passwort bestätigen *
              input#registrations_input_passcon.form-control(name="password-confirmation", type="password", ng-minlength="8",
                ng-model="reg.form.user.password_confirmation")
          .form-group(ng-class="{ 'has-error' : (registrationForm.email.$invalid  && !registrationForm.email.$pristine) || reg.errors.email }")
            label.control-label Email *
              input#registrations_input_email.form-control(name="email", ng-minlength="6",
                ng-model="reg.form.user.email", maxlength="30")
          label.control-label Ich bin/Ich repräsentiere...
          .form-group(ng-class="{'has-error' : reg.errors.typus }")
            label.radio-inline
              input(name="type" type="radio", ng-model="reg.form.user.typus", value="Klinik") 
              | Klinik
            label.radio-inline
              input(name="type" type="radio", ng-model="reg.form.user.typus", value="Institut") 
              | Institut
            label.radio-inline
              input(name="type" type="radio", ng-model="reg.form.user.typus", value="Firma")
              | Firma
            label.radio-inline
              input(name="type" type="radio", ng-model="reg.form.user.typus", value="Student")
              | Student
          .form-group(ng-class="{'has-error' : reg.errors.company }")
            select(name="company" ng-model="reg.form.contact_data.company_id" ng-options="company.id as company.name for company in reg.companies" ng-show="reg.form.user.typus == 'Firma'")
          label.control-label.h3(ng-hide="reg.form.user.typus == 'Student'") Kontaktdaten
          .form-group(ng-class="{'has-error' : reg.errors.firstname || reg.errors.lastname}" ng-hide="reg.form.user.typus == 'Student'")
            label.control-label Vorname *
              input#registrations_input_firstname.form-control(name="lastname",
                ng-model="reg.form.contact_data.firstname")
            label.control-label Nachname *
              input#registrations_input_lastname.form-control(name="lastname",
                ng-model="reg.form.contact_data.lastname")
          .form-group(ng-class="{'has-error' : reg.errors.plz || reg.errors.ort }" ng-hide="reg.form.user.typus == 'Student'")
            label.control-label Postleitzahl *
              input#registrations_input_plz.form-control(name="plz", ng-minlength="5",
                ng-model="reg.form.contact_data.plz", maxlength="5")
            label.control-label Ort *
              input#registrations_input_ort.form-control(name="ort",
                ng-model="reg.form.contact_data.ort")
          .form-group(ng-class="{'has-error' : reg.errors.web }" ng-hide="reg.form.user.typus == 'Student'")
            label.control-label Website *
              input#registrations_input_web.form-control(name="web", ng-minlength="4",
                ng-model="reg.form.contact_data.web")
          .form-group(ng-class="{'has-error' : reg.errors.fon }" ng-hide="reg.form.user.typus == 'Student'")
            label.control-label Telefonnummer *
              input#registrations_input_fon.form-control(name="fon", ng-minlength="5",
                ng-model="reg.contact_data.user.fon")
          b * = Pflichtfeld
          hr
          .form-group
            input(name="agb" type="checkbox", ng-model="reg.read_agb")
            b
              span  Ich habe die 
              a.clickable(data-toggle="modal", data-target="#registrations_modal_agb") Nutzungsbedingungen
              span  gelesen und akzeptiere sie.
          .form-group
            .col-md-6
              button#registrations_button_back.btn.btn-default(ng-click="reg.goBack()") Abbrechen
            .col-md-6              
              button#registrations_button_register.btn.btn-success(ng-click="reg.register()",
                ng-disabled="registrationForm.$pristine || registrationForm.$invalid || reg.regInProgress || !reg.read_agb") Registrieren
  .modal.fade#registrations_modal_agb
